<!-- Page Header Start -->
<div class="container-fluid img-fluid w-80 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <img class="img-fluid w-100" src="img/about-us-header.jpeg">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown"><br>Buy Ticket</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                <li class="breadcrumb-item text-dark active" aria-current="page">Buy Tickets</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->

<!-- Modal -->
<div class="modal fade" id="termsModal" tabindex="-1" role="dialog" aria-labelledby="termsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="termsModalLabel">Terms and Conditions</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>By purchasing a ticket, you agree to abide by our terms and conditions:</p>
                <ol>
                    <li>All ticket purchases are final and non-refundable.</li>
                    <li>Tickets are valid only for the date and attraction specified at the time of purchase.</li>
                    <li>Entry to the attraction is subject to availability and capacity restrictions.</li>
                    <li>Management reserves the right to refuse entry or remove individuals from the premises for any reason, including but not limited to disruptive behavior.</li>
                    <li>Unauthorized resale or attempted resale of tickets is prohibited and may result in refusal of entry.</li>
                    <li>Children must be accompanied by an adult at all times.</li>
                    <li>Photography and videography may be restricted in certain areas for safety and security reasons.</li>
                    <li>Personal belongings are the responsibility of the ticket holder.</li>
                    <li>Management is not liable for any loss, theft, or damage to personal property.</li>
                    <li>Management reserves the right to alter opening hours, close attractions, or cancel events without prior notice.</li>
                </ol>
                <p>If you have any questions or concerns regarding our terms and conditions, please contact our customer support for assistance.</p>
            </div>
        </div>
    </div>
</div>
<!-- Modal End -->

<!-- Buy Ticket Start -->
<div class="bg-light">
    <div class="container">
        <div class="row center-content">
            <div class="col-md-6">
                <br><br>
                <h1>Gardens by the Bay</h1>
                <p>Discover the enchanting Gardens by the Bay, a horticultural oasis in the heart of Singapore. Immerse yourself in the beauty of nature and marvel at the stunning Supertrees and unique plant collections.&nbsp;<a href="#" id="termsLink" data-toggle="tooltip" title="Terms and Conditions"><i class="fas fa-info-circle"></i></a></p>
            </div>
            <div class="col-md-6">
                <% if (success) { %>
                <div class="alert alert-success" role="alert">
                    <strong>Success!</strong> Booking created for <%= success.attractionName %> for <%= success.bookedQuantity %> tickets on <%= success.bookedDate %> (Total Price: <%= success.totalPrice %>).
                </div>
                <% } %>
                <form action="/api/booking/create-booking" method="POST" novalidate>
                    <div class="form-group">
                        <label for="attraction">Attraction</label>
                        <select class="form-control" id="attraction" name="attraction" required>
                            <% data.forEach(post => { %>
                            <option value="<%= post.title%>"><%= post.title %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="ticket">Ticket</label>
                        <input type="number" class="form-control" id="ticket" name="ticket" required>
                    </div>
                    <div class="form-group">
                        <label for="date">Date</label>
                        <input type="date" class="form-control" id="date" name="date" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone number</label>
                        <input type="text" class="form-control" id="phone" name="phone" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
                <br><br>
            </div>
        </div>
    </div>
</div>
<!-- Buy Ticket End -->

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).ready(function() {
        $('#termsLink').tooltip();
    });
</script>
