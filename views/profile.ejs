<!-- Page Header Start -->
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Profile</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-body" href="#">Profile</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->

<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <h1 class="display-5 mb-3">Booking History</h1>
        <% if (bookings.length > 0) { %>
            <ul class="ticket-booking">
                <% bookings.forEach(booking => { %>
                    <li class="testimonial-item position-relative bg-white p-5 mt-4">
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Name:</strong><%= booking.name %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Attraction:</strong><%= booking.attractionName %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Ticket:</strong><%= booking.ticket %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Date:</strong><%= booking.date %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Phone:</strong><%= booking.phone %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Email:</strong><%= booking.email %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Booking ID:</strong><%= booking.bookingID %>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <strong class="me-2">Status:</strong> <%= booking.status ? 'Booked' : 'Cancelled' %>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No bookings found.</p>
        <% } %>
    </div>
</div>

<form action="/authRoutes/logout?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-primary">Log Out</button>
</form>
