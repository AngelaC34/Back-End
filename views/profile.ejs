<!-- Page Header Start -->
<div class="container-fluid bg-light bg-icon py-6">
    <div class="container">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <h1 class="display-5 mb-3">Profile</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-body" href="#">Profile</a></li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- Page Header End -->
<h1>Booking History</h1>

<% if (bookings.length > 0) { %>
    <ul>
        <% bookings.forEach(booking => { %>
            <li>
                <strong>Name:</strong> <%= booking.name %><br>
                <strong>Attraction:</strong> <%= booking.attractionName %><br>
                <strong>Ticket:</strong> <%= booking.ticket %><br>
                <strong>Date:</strong> <%= booking.date %><br>
                <strong>Phone:</strong> <%= booking.phone %><br>
                <strong>Email:</strong> <%= booking.email %><br>
                <strong>Booking ID:</strong> <%= booking.bookingID %><br>
                <strong>Status:</strong> <%= booking.status ? 'Booked' : 'Cancelled' %><br>
                <a href="/editbooking/<%= booking._id %>" class="btn">Edit</a>
            </li>
        <% }); %>
    </ul>
<% } else { %>
    <p>No bookings found.</p>
<% } %>

<form action="/authRoutes/logout?_method=DELETE" method="POST">
    <button type="submit">Log Out</button>
</form>

