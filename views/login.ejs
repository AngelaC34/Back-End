                <!-- <div class="bg-primary text-white d-flex flex-column justify-content-center h-100 p-5"> -->
                    <div class="section-header"><br><br>
                        <h2>Log In</h2>
                        <p>
                            Sign up now to secure your spot and embark your unforgettable journey with us!
                        </p>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="login-form">
                                <form action="/login" method="POST">
                                    <div class="form-row">
                                        <!-- <div class="control-group col-sm-6">
                                            <label>Your Name</label>
                                            <input type="name" class="form-control" id="name" required name="name" />
                                        </div> -->
                                        <div class="control-group col-sm-6">
                                            <label>Email</label>
                                            <input type="email" class="form-control" id="email" required name="email" />
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="control-group col-sm-6">
                                            <label>Your Password</label>
                                            <input type="password" class="form-control" id="password" required name="password" />
                                        </div>
                                        <!-- <div class="control-group col-sm-6">
                                            <label>Repeat Your Password</label>
                                            <input type="password" class="form-control" id="password" required name="password" />
                                        </div> -->
                                    </div>
                                    <br>
                                    <button class="btn btn-primary rounded-pill py-3 px-5 mt-3" type="submit">Log In</button><br><br><br>
                                </form>
                                <a href="/signup">Sign Up</a>
                            </div>
                            <!-- alert -->
                            <% if (messages.error) { %>
                                <div class="alert alert-danger" role="alert">
                                  <%= messages.error %>
                                </div>
                              <% } %>
                              <% if (messages.success) { %>
                                <div class="alert alert-success" role="alert">
                                  <%= messages.success %>
                                </div>
                            </div>
                            
