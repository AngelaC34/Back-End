<style>
    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded p-4">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr class="bg-secondary text-light">
                                <th>Name</th>
                                <th>Review</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% testimonies.forEach(testimony => { %>
                                <tr>
                                    <td><%= testimony.name %></td>
                                    <td><%= testimony.review %></td>
                                    <td>
                                        <form action="/testiRoutes/update-testimony/<%= testimony._id %>?_method=PUT" method="POST">
                                            <label for="status_approved_<%= testimony._id %>">
                                                <input type="radio" id="status_approved_<%= testimony._id %>" name="status" value="true" <%= testimony.status ? 'checked' : '' %>> Approved
                                            </label>
                                            <label for="status_not_approved_<%= testimony._id %>">
                                                <input type="radio" id="status_not_approved_<%= testimony._id %>" name="status" value="false" <%= !testimony.status ? 'checked' : '' %>> Not Approved
                                            </label>
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/testiRoutes/delete-testimony/<%= testimony._id %>?_method=DELETE" method="POST" style="display: inline;">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>