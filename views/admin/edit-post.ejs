<style>
    .container-fluid {
        padding-top: 20px;
    }

    .bg-light {
        padding: 20px;
    }

    .input-group {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
    }

    .input-group label {
        margin-right: 10px;
        width: 100px; /* Adjust the width as needed */
    }

    .input-group input {
        flex: 1;
    }

    .btn {
        margin-top: 15px;
    }
</style>

<div class="container-fluid">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded">
                <h6 class="mb-4">Edit Blog</h6>
                <form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
                    <div class="input-group">
                        <label for="title">Title</label>
                        <input type="text" placeholder="Blog Title" name="title" class="form-control" value="<%= data.title %>">
                    </div>
                    <div class="input-group">
                        <label for="body">Body</label>
                        <textarea name="body" cols="50" rows="10" class="form-control"><%= data.body %></textarea>
                    </div>
                    <div class="input-group">
                        <label for="imageUrl">ImageUrl</label>
                        <input type="text" placeholder="Blog ImageUrl" name="imageUrl" class="form-control" value="<%= data.imageUrl %>">
                    </div>
                    <div class="input-group">
                        <label for="price">Price</label>
                        <input type="text" placeholder="Blog Price" name="price" class="form-control" value="<%= data.price %>">
                    </div>
                    <button type="submit" class="btn btn-primary" value="Update">Save Edits</button>
                </form>
            </div>
        </div>
    </div>
</div>
