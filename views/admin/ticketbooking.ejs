<ul class="ticket-booking">
    <% bookings.forEach(booking => { %>
        <li>
            <strong>Name:</strong> <%= booking.name %><br>
            <strong>Email:</strong> <%= booking.email %><br>
            <strong>Attraction:</strong> <%= booking.attractionName %><br>
            <strong>Ticket:</strong> <%= booking.ticket %><br>
            <strong>Date:</strong> <%= booking.date %><br>
            <strong>Phone:</strong> <%= booking.phone %><br>
            <strong>Booking ID:</strong> <%= booking.bookingID %><br>
            <strong>Status:</strong>
            <form action="/api/booking/update-booking-admin/<%= booking._id %>?_method=PUT" method="POST">
                <label>
                    <input type="radio" name="status" value="true" <%= booking.status ? 'checked' : '' %>> Booked
                </label>
                <label>
                    <input type="radio" name="status" value="false" <%= !booking.status ? 'checked' : '' %>> Cancelled
                </label>
                <input type="submit" value="Update">
            </form>
            <form action="/api/booking/delete-booking/<%= booking._id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
        </li>
    <% }) %>
</ul>
