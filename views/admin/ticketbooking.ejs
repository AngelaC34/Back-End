
<div class="container-fluid bg-light bg-icon py-2">
    <div class="container">
        <div class="ticket-booking">
            <% if (messages && messages.success) { %>
                <div class="alert alert-success" role="alert">
                    <%= messages.success %>
                </div>
            <% } else if (messages && messages.error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= messages.error %>
                </div>
            <% } %>
            <% bookings.forEach(booking => { %>
                <div class="testimonial-item position-relative bg-white p-5 mt-4">
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Name:</strong><%= booking.name %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Email:</strong><%= booking.email %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Attraction:</strong><%= booking.attractionName %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Ticket:</strong><%= booking.ticket %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Date:</strong><%= booking.date %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Phone:</strong><%= booking.phone %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <strong class="me-2">Booking ID:</strong><%= booking.bookingID %>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <form action="/api/booking/update-booking-admin/<%= booking._id %>?_method=PUT" method="POST" class="me-2">
                            <strong class="me-2">Status:</strong>
                            <label class="me-2">
                                <input type="radio" name="status" value="true" <%= booking.status ? 'checked' : '' %>> Booked
                            </label>
                            <label>
                                <input type="radio" name="status" value="false" <%= !booking.status ? 'checked' : '' %>> Cancelled
                            </label><br>
                                <input type="submit" value="Update" class="btn btn-sm btn-primary">
                        </form>
                    </div>
                    <div class="d-flex align-items-center mt-3">
                        
                        <form action="/api/booking/delete-booking/<%= booking._id %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete" class="btn btn-sm btn-danger">
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>