<!-- Page Header Start -->
<div class= "container-fluid img-fluid w-80" src="/img/about-us-header.jpeg mb-5 wow fadeIn" data-wow-delay="0.1s">
    <img class="img-fluid w-100" src="img/GBB-wallpaper-floral-fantasy-1920x1080.jpg">  
        <div class="container">
            <h1 class="display-3 mb-3 animated slideInDown"><br>Our History</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a class="text-body" href="#">Home</a></li>
                    <li class="breadcrumb-item"><a class="text-body" href="#">Pages</a></li>
                    <li class="breadcrumb-item text-dark active" aria-current="page">Our History</li>
                </ol>
            </nav>
        </div>
    </div>
<!-- Page Header End -->

<!-- Blog Start -->
<ul class="row g-4" style="list-style-type: none;">
    <% data.forEach(post => { %>
        <li class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
            <div class="bg-white text-center h-100 p-4 p-xl-5">
                <!-- Display post image -->
                <img class="img-fluid mb-4" src="<%= post.imageUrl %>" alt="Image">
                <!-- Render post title and body -->
                <h4 class="mb-3"><%= post.title %></h4>
                <p class="mb-4"><%= post.body %></p>
                <p class="mb-2">Created at: <%= post.createdAt.toLocaleDateString() %></p>
                <p class="mb-4">Last Updated: <%= post.updatedAt.toLocaleDateString() %></p>
                <a class="btn btn-outline-primary border-2 py-2 px-4 rounded-pill" href="/post/<%= post._id %>">Read More</a>
                <!-- Add any additional content or links related to the post -->
            </div>
        </li>
    <% }); %>
</ul>


<!-- Blog End -->
